<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义的日历的属性  -->
    <declare-styleable name="MyCalendar">
        <attr name="calenderWidth" format="dimension" />
        <attr name="calenderHeight" format="dimension" />
        <attr name="padding" format="dimension"/>
    </declare-styleable>

    <!--圆角 ImageView属性-->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <!--ColorAbleImageView属性-->
    <declare-styleable name="ColorAbleImageView">
        <attr name="select_color" format="color"/>
    </declare-styleable>

    <!--FABWrapper属性-->
    <declare-styleable name="FABWrapper">
        <attr name="fab_menu" format="integer"/>
    </declare-styleable>

    <!--ViewPagerLooper-->
    <declare-styleable name="ViewPageLooper">
        <attr name="dot_normal_color" format="color"></attr>
        <attr name="dot_selected_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <!--流式布局-->
    <declare-styleable name="AutoFlowLayout">
        <attr name="singleLine" format="boolean"></attr>
        <attr name="maxLines" format="integer"></attr>
        <attr name="multiChecked" format="boolean"></attr>
        <attr name="horizontalSpace" format="dimension"></attr>
        <attr name="verticalSpace" format="dimension"></attr>
        <attr name="columnNumbers" format="integer"></attr>
        <attr name="rowNumbers" format="integer"></attr>
        <attr name="cutLineWidth" format="dimension"></attr>
        <attr name="cutLineColor" format="color"></attr>
        <attr name="cutLine" format="boolean"></attr>
        <attr name="lineCenter" format="boolean"></attr>
    </declare-styleable>


</resources>