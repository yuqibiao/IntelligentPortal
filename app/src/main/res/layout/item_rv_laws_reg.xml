<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:contentPaddingBottom="8dp"
    app:contentPaddingLeft="22dp"
    app:contentPaddingRight="12dp"
    app:contentPaddingTop="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家电网公司会计核算办法2014"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家电网企管【2014】1431号"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2021-04-07"
                android:textColor="#333333"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            android:background="@drawable/dash_linen_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="规范资料的摘要内容，规范资料的摘要内规范资料的摘规范资料的摘要内规范资料的摘要内容规范资料的摘要内容规范资料的摘要内容规范资料的摘要内容规范资料的摘要内规范资料的摘要内容规范资料的摘要内容规范资料的摘要内容规范资料的摘要内容要内容规范资料的摘要内容规范资料的摘要内容规范资料的摘要内容"
            android:textColor="#999999" />

    </LinearLayout>

</android.support.v7.widget.CardView>

